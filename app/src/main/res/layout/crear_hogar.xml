<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo hogar"
        android:textSize="@dimen/titles"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="#212121"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de hogar:"
        android:layout_marginTop="180dp"
        android:textSize="19sp"
        />
    <EditText
        android:id="@+id/editTextNombreHogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"        android:padding="@dimen/labels"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona icono:"
        android:textSize="@dimen/input_text_size" />

    <!-- Contenedor para los iconos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/baseline_account_balance_24"
            android:background="@drawable/icon_selector"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/baseline_add_business_24"
            android:background="@drawable/icon_selector"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/baseline_add_home_24"
            android:background="@drawable/icon_selector"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/icon4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/baseline_bedroom_baby_24"
            android:background="@drawable/icon_selector"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="8dp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botonConfigurar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurar"
        android:paddingHorizontal="20dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_oscuro"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"/>
</LinearLayout>