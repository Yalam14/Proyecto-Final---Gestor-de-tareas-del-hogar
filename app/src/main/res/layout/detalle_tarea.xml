<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/boton_editable"
    android:elevation="4dp"
    android:layout_margin="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Limpiar la cocina"
            android:textSize="20sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_auto_fix_high_24"
            android:contentDescription="Editar"
            android:tint="#212121"
            android:padding="4dp"
            android:background="@drawable/icono_editable"
            tools:ignore="UseAppTint" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción:"
        android:textColor="#757575"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción de la tarea"
        android:text="Barrer, trapear, limpiar los platos, el refrigerador y la estufa."
        android:background="@drawable/edit_text_background"
        android:textColor="#212121"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:padding="8dp" />

    <!-- Lista de miembros -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miembros"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"

                android:contentDescription="Avatar" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Samuel Vega"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginStart="8dp"
                android:layout_weight="1" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#212121"
                android:checked="true" />
        </LinearLayout>

    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:backgroundTint="#FF5252"
            android:textColor="#FFFFFF"

            android:drawablePadding="8dp"
            android:paddingHorizontal="16dp"
            android:elevation="2dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terminar"
            android:backgroundTint="#212121"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            android:paddingHorizontal="16dp"
            android:elevation="2dp" />
    </LinearLayout>

</LinearLayout>
