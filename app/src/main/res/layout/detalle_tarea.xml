<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewTituloTarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Título de la tarea"
            android:textSize="@dimen/titles"
            android:textColor="#212121"
            android:textStyle="bold"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/baseline_auto_fix_high_24"
            android:contentDescription="Editar"
            android:tint="#212121"
            android:background="@drawable/icono_editable"
            tools:ignore="UseAppTint" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción:"
        android:textColor="#757575"
        android:textSize="@dimen/labels"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editTextDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción de la tarea"
        android:text="Descripción de la tarea aquí..."
        android:background="@drawable/edit_text_background"
        android:textSize="@dimen/input_text_size"
        android:padding="12dp" />

    <TextView
        android:id="@+id/textViewAsignados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asignado a:"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado de la tarea"
        android:textColor="#757575"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:backgroundTint="#FF5252"
            android:textColor="#FFFFFF"
            android:drawablePadding="8dp"
            android:paddingHorizontal="16dp"
            android:elevation="2dp"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTerminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terminar"
            android:background="@drawable/boton_oscuro"
            android:textColor="#FFFFFF"
            android:drawablePadding="8dp"
            android:paddingHorizontal="16dp"
            android:elevation="2dp" />
    </LinearLayout>

</LinearLayout>
