<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ui.semanal.SemanalFragment">

    <!-- Encabezado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#212121"
            android:text="Tareas del Hogar"/>

        <!-- Selector de semana -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/buttonPreviousWeek"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Semana anterior"
                android:background="?attr/selectableItemBackgroundBorderless"
                />

            <TextView
                android:id="@+id/textWeekNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="Semana 1"
                android:textColor="#212121"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/buttonNextWeek"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Semana siguiente"
                android:background="?attr/selectableItemBackgroundBorderless"
               />
        </LinearLayout>

        <!-- Barra de progreso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso semanal"
                android:textSize="14sp"
                android:textColor="#616161"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:progressDrawable="@drawable/progress_bar_black"
                android:progress="50"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>

    <!-- Lista de días -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Lunes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackground"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:text="Lunes"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Limpiar cocina"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lavar porche"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bañar perro"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Martes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackground"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:text="Martes"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Limpiar baños"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Regar plantas"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sacar basura"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Miércoles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackground"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:text="Miércoles"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Aspirar alfombras"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Limpiar ventanas"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ordenar closet"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Jueves -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackground"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:text="Jueves"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Limpiar cocina"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lavar ropa"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Planchar"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Viernes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackground"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:text="Viernes"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Comprar víveres"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Limpiar cocina"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sacar mascotas"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Sábado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackground"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:text="Sábado"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lavar auto"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jardinería"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Día de descanso"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Domingo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackground"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:text="Domingo"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Planificar semana"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Día familiar"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Descanso"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#F5F5F5"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>