<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingTop="8dp"
    tools:context=".ui.semanal.SemanalFragment">

    <!-- Encabezado mejorado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp">

        <!-- Título más grande y mejor espaciado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#212121"
            android:text="Tareas del Hogar"
            android:layout_marginBottom="8dp"/>

        <!-- Selector de semana con mejor espaciado -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/buttonPreviousWeek"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Semana anterior"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:id="@+id/textWeekNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="Semana 1"
                android:textColor="#212121"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/buttonNextWeek"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Semana siguiente"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>

        <!-- Barra de progreso con mejor espaciado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso semanal"
                android:textSize="16sp"
                android:textColor="#616161"
                android:layout_marginBottom="8dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:progressDrawable="@drawable/progress_bar_black"
                android:progress="0"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Separador más grueso -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EEEEEE"
        android:layout_marginBottom="8dp"/>

    <!-- Lista de días -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Lunes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#212121"
                    android:text="Lunes"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/task_lunes_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_lunes_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_lunes_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Martes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#212121"
                    android:text="Martes"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/task_martes_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_martes_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_martes_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Miércoles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#212121"
                    android:text="Miércoles"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/task_miercoles_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_miercoles_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_miercoles_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Jueves -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#212121"
                    android:text="Jueves"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/task_jueves_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_jueves_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_jueves_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Viernes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#212121"
                    android:text="Viernes"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/task_viernes_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_viernes_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_viernes_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Sábado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#212121"
                    android:text="Sábado"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/task_sabado_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_sabado_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_sabado_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Domingo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#212121"
                    android:text="Domingo"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/task_domingo_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_domingo_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/task_domingo_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginLeft="12dp"
                        android:background="#212121"
                        android:minHeight="100dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressTasks"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
</LinearLayout>